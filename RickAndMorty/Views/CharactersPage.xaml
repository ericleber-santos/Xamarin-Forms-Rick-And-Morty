<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RickAndMorty.Views.CharactersPage">
    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                        Value="#c191d6" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <StackLayout>
        <CollectionView Margin="5"
                    x:Name="users"
                    ItemsSource="{Binding CharactersCollection}"                        
                    SelectionMode="Single"
                    SelectedItem="{Binding SelectedEpisode}"                
                    SelectionChangedCommand="{Binding ItemSelectionChangedCommand}">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="1"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Frame  HasShadow="True"
                            BorderColor="LightSteelBlue" 
                            Padding="5" 
                            CornerRadius="5" 
                            BackgroundColor="Transparent">
                            <StackLayout Padding="5" Spacing="0">
                                <FlexLayout Direction="Column" 
                                        AlignItems="Start" 
                                        JustifyContent="Start">
                                    <Label  Text="Name:" 
                                        FontSize="Small"/>
                                    <Label  Text="{Binding name}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                    <Label  Text="Email:" 
                                        FontSize="Small"/>
                                    <Label  Text="{Binding status}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                    <Label  Text="Website:" 
                                        FontSize="Small"/>
                                    <Label  Text="{Binding species}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                    <Label  Text="{Binding type}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                    <Label  Text="{Binding gender}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                   
                                    <Image Source="{Binding image}" 
                                           HeightRequest="100" 
                                           Aspect="AspectFit"/>

                                    <Label  Text="{Binding url}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                    <Label  Text="{Binding created}" 
                                        FontSize="Small" 
                                        FontAttributes="Bold" />
                                </FlexLayout>
                            </StackLayout>
                        </Frame>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <ActivityIndicator x:Name="activityIndicator"
                       Color="Orange"
                       VerticalOptions="CenterAndExpand"
                       HorizontalOptions="Fill"
                       IsRunning="{Binding IsBusy}"/>
    </StackLayout>
</ContentPage>